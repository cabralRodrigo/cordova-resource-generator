<Page x:Class="CordovaResourceGenerator.UI.FinishedWizardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:r="clr-namespace:CordovaResourceGenerator.UI.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="257"
      d:DesignWidth="544"
      Title="{x:Static r:Resources.FinishedWizardPage_Title}">
    <Border Style="{StaticResource WizardPageMainBorder}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap" Text="{x:Static r:Resources.FinishedWizardPage_Description}"/>
            <TextBlock>
                <Hyperlink Command="{Binding OpenOutputFolderCommand}">
                    <TextBlock Text="{x:Static r:Resources.FinishedWizardPage_Hyperlink_Text}"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Border>
</Page>
